<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property><!-- Define o driver de conexÃ£o com o bd -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/corretora_db?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.max_size">20</property>
        <property name="c3p0.timeout">300</property>
        <property name="c3p0.max_statements">80</property>
        <property name="c3p0.idle_test_period">300</property>
        
        <mapping class="br.com.materres.model.entities.Cidade"/>
        <mapping class="br.com.materres.model.entities.Cliente"/>
        <mapping class="br.com.materres.model.entities.Corretor"/>
        <mapping class="br.com.materres.model.entities.Corretora"/>
        <mapping class="br.com.materres.model.entities.Empresa"/>
        <mapping class="br.com.materres.model.entities.Endereco"/>
        <mapping class="br.com.materres.model.entities.Estado"/>
        <mapping class="br.com.materres.model.entities.Objeto"/>
        <mapping class="br.com.materres.model.entities.Pais"/>
        <mapping class="br.com.materres.model.entities.PessoaFisica"/>
        <mapping class="br.com.materres.model.entities.PessoaJuridica"/>
        <mapping class="br.com.materres.model.entities.Seguradora"/>
        <mapping class="br.com.materres.model.entities.Seguro"/>
    </session-factory>
</hibernate-configuration>
